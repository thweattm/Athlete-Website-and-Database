<h2>Update College</h2>

<!-- Update college form -->
<div id="input">
	<b>Update any information below</b>
	<br><br>
	
	<form id="updateCollegeSubmit" action="/collegeUpdateSubmit" method="post">
		<input type="hidden" name="id" value="{{college.id}}">
		<table id="formTable">
			<tr>
				<td class="rightAlign">City:</td>
				<td class="leftAlign"><input type="text" name="city" value="{{college.city}}" required></td>
			</tr>
			<tr>
				<td class="rightAlign">State:</td>
				<td class="leftAlign"><input type="text" name="state" value="{{college.state}}" required></td>
			</tr>
			<tr>
				<td class="rightAlign">School Name:</td>
				<td class="leftAlign"><input type="text" name="schoolName" value="{{college.schoolName}}" required></td>
			</tr>
		</table>
		<br>
		<input type="submit" value="Update">
		<a href="/college">Cancel</a>
	</form>
</div>


